{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug my_program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/runUnitTests",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb",
      "linux": {
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "windows": {
        "miDebuggerPath": "path_to_gdb_on_windows"
      },
      "osx": {
        "miDebuggerPath": "/usr/local/bin/gdb"
      },
      "sourceFileMap": {
        "/mnt/c": "c:\\"
      }
    }
  ]
}